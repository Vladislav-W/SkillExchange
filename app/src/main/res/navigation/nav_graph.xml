<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Логин -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.skillexchange.ui.fragments.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

    </fragment>

    <!-- Регистрация -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.skillexchange.ui.fragments.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

    <!-- Главная -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.skillexchange.ui.fragments.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home" />

    <!-- Сообщения -->
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.skillexchange.ui.fragments.MessagesFragment"
        android:label="Сообщения"
        tools:layout="@layout/fragment_messages" />

    <!-- Профиль -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.skillexchange.ui.fragments.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile">

        <!-- Добавьте этот action ВНУТРИ тега fragment -->
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />

    </fragment>

    <!-- Редактирование профиля (НОВЫЙ фрагмент) -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.skillexchange.ui.fragments.editprofile.EditProfileFragment"
        android:label="Редактирование профиля"
        tools:layout="@layout/fragment_edit_profile">

        <!-- Действие назад к профилю -->
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment" />

    </fragment>

</navigation>