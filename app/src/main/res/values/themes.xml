<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Основная тема (светлая) -->
    <style name="Theme.SkillExchange" parent="Theme.Material3.Light.NoActionBar">
        <!-- Основные цвета (Primary) -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_200</item>
        <item name="colorOnPrimaryContainer">@color/green_900</item>

        <!-- Вторичные цвета (Secondary) -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondaryContainer">@color/teal_900</item>

        <!-- Фон -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Тёмная тема (если нужно) -->
    <style name="Theme.SkillExchange.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorOnPrimary">@color/green_900</item>
        <item name="colorPrimaryContainer">@color/green_700</item>
        <item name="colorOnPrimaryContainer">@color/green_100</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_900</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/teal_100</item>

        <item name="android:colorBackground">@color/black</item>
    </style>
</resources>